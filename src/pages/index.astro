---
import ApiComponent from '../components/ApiComponent.vue';
import AgregarLibro from '../components/AgregarLibro.vue';
import '../styles/global.css';
---

<html>
  <head>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <title>Mi Libreria</title>
  </head>
  <body>
    <h1>Bienvenido a mi libreria</h1>
    <!-- MenÃº con botones -->
    <nav class="menu">
      <a href="/agregar-autores" class="menu-button">Agregar Autores</a>
     
    </nav>
     <AgregarLibro client:load />
    <ApiComponent client:load />
  </body>
</html>
<style>
.menu {
  display: flex;
  gap: 20px;
  margin-top: 20px;
}

.menu-button {
  padding: 10px 20px;
  background: linear-gradient(135deg, #6d28d9, #8b5cf6);
  color: white;
  text-decoration: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.menu-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}
</style>